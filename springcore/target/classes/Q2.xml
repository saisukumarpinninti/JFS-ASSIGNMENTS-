<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="q2List" class="Q2.Question" > 
    <constructor-arg   type="int"  value="1"/>
    <constructor-arg  value="What is Orange?"/>
    <constructor-arg index="2">  
    <list>  
    <value>it  is a Color</value>  
    <value>it  is a Fruit</value>  
    </list>  
    </constructor-arg>  
</bean>  

    <bean id="q2Set" class="Q2.Question" >  
    <constructor-arg   type="int"  value="2"/>
    <constructor-arg  value="What is Java?"/>
    <constructor-arg index="2">  
    <set>  
    <value>Java is a programming language</value>  
    <value>Java is a platform</value>  
    <value>Java is an Island</value>  
    </set>  
    </constructor-arg>  
</bean>  

  <bean id="q2Map" class="Q2.Question">  
    <constructor-arg   type="int"  value="3"/>
    <constructor-arg  value="What is Silver?"/>
    <constructor-arg index="2">  
    <map>  
    <entry key="1" value="it is a colour"></entry>
    <entry key="2" value="it is a Metal"></entry>
    </map>  
    </constructor-arg>  
</bean>  


</beans>